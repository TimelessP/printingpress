# Comprehensive .gitignore for Python projects (includes editors, dotenv, IDEs)

# Byte-compiled / optimized / DLL files
__pycache__/
*.py[cod]
*$py.class

# C extensions
*.so

# Distribution / packaging
build/
dist/
*.egg-info/
.eggs/
pip-wheel-metadata/

# Installer logs
pip-log.txt
pip-delete-this-directory.txt

# Unit test / coverage
.pytest_cache/
.coverage
.coverage.*
coverage.xml
htmlcov/
.hypothesis/

# Translations
*.mo
*.pot

# Django stuff:
*.log
local_settings.py
db.sqlite3
db.sqlite3-journal

# Flask instance folder
instance/
.webassets-cache

# Scrapy
.scrapy

# Sphinx documentation
docs/_build/

# PyBuilder
target/

# Jupyter Notebook
.ipynb_checkpoints

# IPython
profile_default/
ipython_config.py

# pyenv
.python-version

# pipenv
Pipfile.lock

# poetry
poetry.lock

# virtualenv
venv/
ENV/
env/
.venv/
venv.bak/

# dotenv files - keep examples (re-include) if present
.env
.env.*
!.env.example

# Editor directories and files
# VS Code
.vscode/

# JetBrains IDEs (PyCharm, IntelliJ)
.idea/
*.iml

# Vim
*~
.*.swp
*.swp
*.swo
*.swn
.netrwhist

# macOS
.DS_Store

# Windows
Thumbs.db
desktop.ini

# Logs and databases
*.log
*.sql
*.sqlite

# Files created by build tools
.cache/
node_modules/

# Python compiled files
*.pyc
*.pyo
*.pyd

# End of file
